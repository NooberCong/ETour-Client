
@{
    ViewData["Title"] = "Order History";
}

   <style>
      
       th {
           color: #4d94ff;
       }
   </style>

<div class="container bootdey">
    <div class="row">
        <div class="col-md-12">
            <h1>Trip History</h1>
        </div>
        <div class="col-md-12">
            <form>
                <input type="text" placeholder="Search by trip name" size="25%">
                <input type="submit" value="search" />
            </form>
            <br />
        </div>
        <br />
        <br />
        <br />

        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th>ID</th>
                    <th>Price</th>
                    <th>Paid</th>
                    <th>Date</th>
                    <th>Order by</th>
                </tr>
                @if (Model.Count() > 0)
                {
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.ID</td>
                            <td>@obj.TotalPaid</td>
                            @if (@obj.IsPaid)
                            {
                            <td class="text-success">Paid</td>}
                            else
                            {<td class="text-danger">Not yet</td>}
                            <td>@obj.DateOrdered</td>
                            <td>@obj.Customer.Name</td>
                        </tr>
                    } }
                else
                {
            <tr>
                <td>No info</td>
                <td>No info</td>
                <td>No info</td>
                <td>No info</td>
            </tr>}

            </table>
        </div>
    </div>
</div>