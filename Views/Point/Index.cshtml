@model IEnumerable<PointLog>
@{
    ViewData["Title"] = "Pointlog";
    var tblId = "questionTbl";
}
<div class="container  mt-3 mb-4 ">
    <ul class="list-group">
        @if (Model.Count() > 0)
        {
            foreach (var p in Model)
            {
                if (p.Amount > 1)
                {
                    <li class="list-group-item ">

                        <h4></h4><h4> <div class="text-success">+@p.Amount Points</div></h4>


                        <p><b> @p.Trigger</b></p>
                        <p>@p.Description</p>
                        <p><small>@p.LastUpdated.Date</small></p>

                    </li>
                }
                else if (p.Amount == 1)
                {
                    <li class="list-group-item ">

                        <h4> <div class="text-success">+@p.Amount Point</div></h4>

                        <p><b> @p.Trigger</b></p>
                        <p>@p.Description</p>
                        <p><small>@p.LastUpdated.Date</small></p>

                    </li>
                }
                else
                {
                <li class="list-group-item ">

                    <h4> <div class="text-danger">@p.Amount Point</div></h4>

                    <p><b> @p.Trigger</b></p>
                    <p>@p.Description</p>
                    <p><small>@p.LastUpdated.Date</small></p>

                </li>
                }
            }
        }
    </ul>
   
</div>