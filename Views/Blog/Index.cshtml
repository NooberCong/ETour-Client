@model Client.Models.BlogListModel
@{
    ViewData["Title"] = "Blog";
}

<div id="parallax" class="d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/mountain.jpg');">
    <h1 class="display-3 text-white">Our Blog</h1>
</div>

<!--Section: Block Content-->
<section class="container mb-5">
    <!-- Grid row -->
    <div class="row mt-3">
        @foreach (var blog in Model.Posts)
        {
            <!-- Grid column -->
        <div class="col-md-6 col-lg-4 mb-4">

            <!-- Card -->
            <div class="">


                <div class="view overlay z-depth-2">
                    <img class="img-fluid rounded" src="@blog.CoverImgUrl" alt="Sample">
                    <h4 class="mb-0"><span class="badge badge-primary badge-pill badge-news">New</span></h4>
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>


                <div class="pt-4">

                    <h5>@blog.Title</h5>
                    <p class="small text-muted text-uppercase mb-3">
                        by
                        <a href="#!" class="text-reset"><strong>@blog.Author.FullName</strong></a>
                        <a href="#!" class="text-reset float-right">@blog.LastUpdated</a>
                    </p>
                    <p class="text-multiline-truncate">
                        @blog.Content
                    </p>
                    <hr>

                </div>
                <div class="d-flex justify-content-between text-uppercase text-muted white small">
                    <div class="d-flex align-items-center">
                        @for (int i = 0; i < blog.Tags.Count; i++)
                        {
                            <i class="fas fa-tag mr-2"></i>
                            <a href="#!" class="text-reset">@blog.Tags[i]</a>
                        }
                    </div>
                    <div class="d-flex align-items-center">
                        <a href="#!" class="text-reset">
                            <i class="fas fa-comment-alt mr-2"></i>1
                        </a>
                    </div>
                </div>
            </div>
            <!-- Card -->
        </div>
            <!-- Grid column -->
        }

    </div>
    <!-- Grid row -->
</section>
<!--Section: Block Content-->