@{
    ViewData["Title"] = "Cart";
}

<style>
    .bg-light-blue {
        background-color: #e9f7fe !important;
        color: #3184ae;
        padding: 7px 18px;
        border-radius: 4px;
    }
</style>


<!--Section: Block Content-->
<section class="container my-5">
    <h3 class="mb-4">Cart (<span>2</span> bookings)</h3>
    <!--Grid row-->
    <div class="row">

        <!--Grid column-->
        <div class="col-lg-8">

            <!-- Card -->
            <div class="card wish-list mb-3">
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-5 col-xl-4">
                            <img class="img-fluid w-100 h-100 rounded" style="object-fit: cover"
                                 src="https://www.baolau.com/blog/wp-content/uploads/2019/05/dalat-lake-area.jpg" alt="Sample">
                        </div>
                        <div class="col-md-7 col-xl-8">
                            <div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5>Tour Tp Hcm - Đà Lạt</h5>
                                        <p class="mb-2 text-muted text-uppercase small">
                                            Time frame: <span class="bg-light-blue">02.03.2020 - 04.03.2020</span>
                                        </p>
                                        <p class="mb-2 text-muted text-uppercase small">Duration: 6 days</p>
                                        <p class="mb-3 text-muted text-uppercase small">Tour Type: Domestic</p>
                                    </div>
                                    <div>
                                        <p class="text-right">Quantity: 1</p>
                                        <p class="text-right">17.99$</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="#!" type="button" class="card-link-secondary small text-uppercase mr-3">
                                            <i class="fas fa-trash-alt mr-1"></i> Remove item
                                        </a>
                                        <a href="#!" type="button" class="card-link-secondary small text-uppercase">
                                            <i class="fas fa-heart mr-1"></i> Move to wish list
                                        </a>
                                    </div>
                                    <p class="mb-0 text-right"><span><strong>Total: $17.99</strong></span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <div class="row mb-4">
                        <div class="col-md-5 col-xl-4">
                            <img class="img-fluid w-100 h-100 rounded" style="object-fit: cover"
                                 src="https://travelmart.vn/uploads/2019/05/17/kinh-nghiem-trekking-ta-nang-phan-dung-6jpg-15580868054.jpg" alt="Sample">
                        </div>
                        <div class="col-md-7 col-xl-8">
                            <div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5>Tour Tà Năng - Phan Dũng</h5>
                                        <p class="mb-2 text-muted text-uppercase small">
                                            Time frame: <span class="bg-light-blue">02.03.2020 - 04.03.2020</span>
                                        </p>
                                        <p class="mb-2 text-muted text-uppercase small">Duration: 3 days</p>
                                        <p class="mb-3 text-muted text-uppercase small">Tour Type: International</p>
                                    </div>
                                    <div>
                                        <p class="text-right">Quantity: 2</p>
                                        <p class="text-right">18$</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="#!" type="button" class="card-link-secondary small text-uppercase mr-3">
                                            <i class="fas fa-trash-alt mr-1"></i> Remove item
                                        </a>
                                        <a href="#!" type="button" class="card-link-secondary small text-uppercase">
                                            <i class="fas fa-heart mr-1"></i> Move to wish list
                                        </a>
                                    </div>
                                    <p class="mb-0 text-right"><span><strong>Total: $36</strong></span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p class="text-primary mb-0">
                        <i class="fas fa-info-circle mr-1"></i> Do not delay the purchase, adding
                        items to your cart does not mean booking them.
                    </p>

                </div>
            </div>
            <!-- Card -->
            <!-- Card -->
            <div class="card mb-3">
                <div class="card-body">

                    <h5 class="mb-4">We accept</h5>

                    <img class="mr-2" width="45"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                         alt="Visa">
                    <img class="mr-2" width="45"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                         alt="American Express">
                    <img class="mr-2" width="45"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                         alt="Mastercard">
                    <img class="mr-2" width="45"
                         src="https://www.paypalobjects.com/webstatic/mktg/logo-center/PP_Acceptance_Marks_for_LogoCenter_266x142.png"
                         alt="PayPal acceptance mark">
                </div>
            </div>
            <!-- Card -->

        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-lg-4">

            <!-- Card -->
            <div class="card mb-3">
                <div class="card-body">

                    <h5 class="mb-3">The total amount of</h5>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            Temporary amount
                            <span>$25.98</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0  px-0">
                            Payment
                            <span>Credit Card</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>The total amount of</strong>
                                <strong>
                                    <p class="mb-0">(including VAT)</p>
                                </strong>
                            </div>
                            <span><strong>$53.98</strong></span>
                        </li>
                    </ul>

                    <button type="button" class="btn btn-primary btn-block waves-effect waves-light">Check out</button>

                </div>
            </div>
            <!-- Card -->
            <!-- Card -->
            <div class="card mb-3">
                <div class="card-body">

                    <a class="dark-grey-text d-flex justify-content-between" data-toggle="collapse" href="#collapseExample1"
                       aria-expanded="false" aria-controls="collapseExample1">
                        Add a discount code (optional)
                        <span><i class="fas fa-chevron-down pt-1"></i></span>
                    </a>

                    <div class="collapse" id="collapseExample1">
                        <div class="mt-3">
                            <div class="md-form md-outline mb-0">
                                <input type="text" id="discount-code1" class="form-control font-weight-light"
                                       placeholder="Enter discount code">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card -->

        </div>
        <!--Grid column-->

    </div>
    <!--Grid row-->

</section>
<!--Section: Block Content-->