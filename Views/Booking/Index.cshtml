@model IEnumerable<Core.Entities.Booking>
@{
    ViewData["Title"] = "Cart";
}

<style>
    .bg-light-blue {
        background-color: #e9f7fe !important;
        color: #3184ae;
        padding: 7px 18px;
        border-radius: 4px;
    }
</style>


<!--Section: Block Content-->
<section class="container my-5">
    <h3 class="mb-4">Cart (<span>2</span> bookings)</h3>
    <!--Grid row-->
    <div class="row">

        <!--Grid column-->
        <div class="col-lg-8">

            <!-- Card -->
            <div class="card wish-list mb-3">
                <div class="card-body">


                    @if (Model.Count() > 0)
                    {
                        @foreach (var b in Model)
                        {<div class="row mb-4">
                                <div class="col-md-5 col-xl-4">
                                    <img class="img-fluid w-100 h-100 rounded" style="object-fit: cover" src="@b.Trip.Tour.ImageUrls[0]" alt="Sample">
                                </div>


                                <div class="col-md-7 col-xl-8">
                                    <div>
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h5>Tour @b.Trip.Tour.StartPlace - @b.Trip.Tour.Destination </h5>
                                                <p class="mb-2 text-muted text-uppercase small">
                                                    Time frame: <span class="bg-light-blue text-center">@b.Trip.StartTime.Day.@b.Trip.StartTime.Month.@b.Trip.StartTime.Year - @b.Trip.EndTime.Day.@b.Trip.EndTime.Month.@b.Trip.EndTime.Year</span>
                                                </p>
                                                <p class="mb-2 text-muted text-uppercase small">Duration: @(b.Trip.EndTime.Day-b.Trip.StartTime.Day) days</p>
                                                <p class="mb-3 text-muted text-uppercase small">Tour Type: @b.Trip.Tour.Type</p>
                                            </div>
                                            <div>
                                                <p class="text-right">Quantity: @b.CustomerInfos.Count</p>
                                                <p class="text-right">@b.Trip.Price</p>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <form class="d-inline" asp-action="Remove" asp-route-id="@b.ID" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" method="post">
                                                    <a style="cursor: pointer" onclick="targetForm = this.parentNode;" class="text-danger" data-toggle="modal" data-target="#delete-modal"><span data-feather="trash" />Remove frome Lists</a>
                                                </form>

                                            </div>
                                            <p class="mb-0 text-right"><span><strong>Total: @(b.Trip.Price * b.CustomerInfos.Count)</strong></span></p>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }
                    }


                    <p class="text-primary mb-0">
                        <i class="fas fa-info-circle mr-1"></i> Do not delay the purchase, adding
                        items to your cart does not mean booking them.
                    </p>

                </div>
            </div>

        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-lg-4">

            <!-- Card -->
            <div class="card mb-3">
                <div class="card-body">

                    <h5 class="mb-3">The total amount of</h5>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            Temporary amount
                            <span>$25.98</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0  px-0">
                            Payment
                            <span>Credit Card</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>The total amount of</strong>
                                <p class="mb-0">(including VAT)</p>
                            </div>
                            <span><strong>$53.98</strong></span>
                        </li>
                    </ul>

                    <button type="button" class="btn btn-primary btn-block waves-effect waves-light">Check out</button>

                </div>
            </div>
            <div class="card-body mb-3">

                <a class="dark-grey-text d-flex justify-content-between" data-toggle="collapse" href="#collapseExample1"
                   aria-expanded="false" aria-controls="collapseExample1">
                    Add a discount code (optional)
                    <span><i class="fas fa-chevron-down pt-1"></i></span>
                </a>

                <div class="collapse" id="collapseExample1">
                    <div class="mt-3">
                        <div class="md-form md-outline mb-0">
                            <input type="text" id="discount-code1" class="form-control font-weight-light"
                                   placeholder="Enter discount code">
                            <button class="btn btn-primary mt-2">Apply</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-3">



                <div class="card-body">

                    <h5 class="mb-4">We accept</h5>

                    <img class="mr-2" width="45"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                         alt="Visa">
                    <img class="mr-2" width="45"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                         alt="American Express">
                    <img class="mr-2" width="45"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                         alt="Mastercard">
                    <img class="mr-2" width="45"
                         src="https://www.paypalobjects.com/webstatic/mktg/logo-center/PP_Acceptance_Marks_for_LogoCenter_266x142.png"
                         alt="PayPal acceptance mark">
                </div>



            </div>
        </div>

        <!--Grid column-->
    </div>
    <!--Grid row-->

</section>
<!--Section: Block Content-->