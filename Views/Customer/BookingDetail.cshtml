@model Core.Entities.Booking

<div class="container my-5">
    <div class="row">
        <div class="card shadow col-6 p-0">
            <div class="card-title card-header">BOOKING CONFIRMATION</div>
            <div class="p-3">
                <div>
                    <div class="col-sm-2 col-xs-12 " style="font-weight:bold;">Tour ID:</div>
                    <div class="col-sm-10 col-xs-12">@Model.Trip.Tour.ID</div>
                </div>
                <div>
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Tour Name:</div>
                    <div class="col-sm-10 col-xs-12">
                        @Model.Trip.Tour.
                    </div>
                </div>

                <div>
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Start time:</div>
                    <div class="col-sm-10 col-xs-12">
                        @Model.Trip.StartTime.Day / @Model.Trip.StartTime.Month / @Model.Trip.StartTime.Year
                    </div>
                </div>
                <div>
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">End time:</div>
                    <div class="col-sm-10 col-xs-12">
                        @Model.Trip.EndTime.Day / @Model.Trip.EndTime.Month / @Model.Trip.EndTime.Year
                    </div>
                </div>
                <div class="row bor-bot">
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Start place:</div>
                    <div class="col-sm-10 col-xs-12">
                        @Model.Trip.Tour.StartPlace
                    </div>
                </div>
                <div>
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Destination:</div>
                    <div class="col-sm-10 col-xs-12">
                        @Model.Trip.Tour.Destination
                    </div>
                </div>
                <div></div>
            </div>
        </div>
        <div class="card shadow col-5 offset-1 p-0">
            <div class="card-title card-header">CUSTOMER INFORMATION</div>
            <div class="p-3">
                <div>
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Customer:</div>
                    <div class="col-sm-10 col-xs-12">@Model.Author.Name </div>
                </div>

                <div>
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Phone:</div>
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        @Model.Author.PhoneNumber
                    </div>

                </div>
                <div>
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Email:</div>
                    <div class="col-sm-10 col-xs-12">
                        @Model.Author.Email
                    </div>
                </div>
                <div>
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Quantity:</div>
                    <div class="col-sm-10 col-xs-12">
                        @Model.TicketCount
                    </div>
                </div>
                <div>
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Points:</div>
                    <div class="col-sm-10 col-xs-12">
                        @Model.Author.Points
                    </div>
                </div>
                <div class="row bor-bot">
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Note:</div>
                    <div class="col-sm-10 col-xs-12">
                        Booking from Toure.
                    </div>
                </div>
            </div>
        </div>
        <div class="card shadow col-12 p-0 mt-5">
            <div class="card-title card-header">BOOKING DETAIL</div>
            <div class="p-3">
                <div class="row">
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Booking ID:</div>
                    <div class="col-sm-10 col-xs-12">@Model.ID (Please remember this Booking number)</div>
                </div>
                <div class="row">
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Total:</div>
                    <div class="col-sm-10 col-xs-12">@Model.Total</div>
                </div>
                <div class="row">
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">Register day:</div>
                    <div class="col-sm-10 col-xs-12">@Model.LastUpdated.ToLongCustomDateString()</div>
                </div>

                <div class="row">
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;">State:</div>
                    <div class="col-sm-10 col-xs-12">
                        <span class="@Model.Status.Badge()">@Model.Status</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 col-xs-12" style="font-weight:bold;"><span class="hidden-md hidden-sm">Description:</span></div>
                    <div class="col-sm-10 col-xs-12">@Model.Trip.Tour.Description</div>
                </div>
            </div>
        </div>
    </div>
</div>