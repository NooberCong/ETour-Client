@model QuestionListModel

@{
    ViewData["Title"] = "Question detail";

}
<style>    .avatar {
        width: 50px;
        height: 50px;
    }
</style>


<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container mt-5 mb-5">
    <h3 class="panel-title">Conversations</h3>
    <div class="row message-wrapper rounded shadow mb-20">
        <div class="col-md-4 message-sideleft">
            <div class="panel">
               
                <div class="panel-body no-padding mt-2">
                    <div class="list-group no-margin list-message">
                        <a href="#" class="list-group-item">
                            <h4 class="list-group-item-heading">@Model._Question.Author.Name </h4>
                            <small> @Model._Question.LastUpdated.Day/ @Model._Question.LastUpdated.Month/ @Model._Question.LastUpdated.Year at @Model._Question.LastUpdated.Hour:@Model._Question.LastUpdated.Minute</small>
                            <p class="list-group-item-text">
                                Question #@Model._Question.ID: <strong>@Model._Question.Title</strong>
                            </p>
                            <span class="label label-success pull-right">@Model._Question.Status</span>
                            <div class="clearfix"></div>
                        </a>
                        
                    </div><!-- /.list-group -->
                </div><!-- /.panel-body -->
            </div><!-- /.panel -->
        </div><!-- /.message-sideleft -->
        <div class="col-md-8 message-sideright">
            <div class="panel">
                <div class="panel-heading">
                    <div class="media mt-2">

                        <a class="pull-left" asp-controller="Customer" asp-action="Index">
                            <img src="@Model._Question.Author.ImgUrl" alt="Rebecca Cabean" class="img-cỉcle avatar">
                        </a><br />
                        <div class="media-body ml-3">
                            <h4 class="media-heading">@Model._Question.Author.Name </h4>
                          
                        </div>
                    </div>
                </div><!-- /.panel-heading -->
                <div class="panel-body m-3">
                  

                    <p class="lead">
                        @Model._Question.Content
                    </p>

                </div><!-- /.panel-body -->
            </div><!-- /.panel -->
            <hr />
            @if (Model._Question.Answers.Count > 0)
            {
                foreach (var q in Model._Question.Answers)
                {
                    <div class="panel">
                        <div class="panel-heading">
                            <div class="media">

                                <div class="media-body">
                                    <h4 class="media-heading"> @q.Author</h4>
                                    <small> Answered: @q.LastUpdated.Day/ @q.LastUpdated.Month/ @q.LastUpdated.Year at  @q.LastUpdated.Hour.@q.LastUpdated.Minute </small>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <br />
                            <p class="lead m-3">
                                @q.Content
                            </p>
                            <hr>

                        </div>
                    </div>}
            }
        </div>

    </div>

    <div class="row">
        <form asp-action="CreateAns" method="post" class="col-12 mt-5">
            <div class="form-group" hidden>
                <b> <label asp-for="@Model._Question.ID"></label></b>
                <input asp-for="@Model._Question.ID" type="text" class="form-control">

            </div>
            <div class="form-group" hidden>
                <label asp-for="@Model._Question.Author.Name"></label>
                <input asp-for="@Model._Question.Author.Name" type="text" class="form-control"/>
            </div>

            <div class="form-group">
                <b><label asp-for="@Model._Question.Content">Type your question below</label></b>
                <textarea asp-for="@Model._Question.Content" type="text" rows="5" cols="20" class="form-control" placeholder="Type the question here"></textarea>
            </div>

            <button type="submit" class="btn btn-primary mb-2">Submit</button>
        </form>
    </div>

</div>