@model QuestionListModel
@{
    ViewData["Title"] = "Questions";
}




<div class="container">
    <h1 class=" text-center mb-4">Questions</h1>
    <div class="main-body p-0">
        <div class="inner-wrapper">

            <div class="inner-main col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">No.</th>

                            <th scope="col" class="text-center">Date</th>

                            <th scope="col" class="text-center">Title</th>
                            <th scope="col" class="text-center">Content</th>
                            <th scope="col" class="text-center">Category</th>
                            <th scope="col" class="text-center">Status</th>


                        </tr>
                    </thead>
                    @if (Model.Questions.Count() > 0)
                    {
                        foreach (var q in Model.Questions)
                        {

                            <tbody>
                                <tr>
                                    <th scope="row" class="text-center">@q.ID</th>

                                    <td class="text-center">@q.LastUpdated</td>

                                    <td class="text-center">@q.Title</td>
                                    <td style="width:30%;">@q.Content</td>
                                    <td class="text-center">@q.Category</td>
                             
                                    <td class="text-center text-success">@q.Status</td>
                                </tr>
                            </tbody>

                        }
                    }
                    else
                    {   
                        <td class="text-capitalize">Have any question? Please type below</td>
                    }
                </table>
                <h5 class="text-center mt-5 ">Type your question here</h5>
                <form asp-action="Create" method="post">
                    
                    <div class="form-group">
                        <b> <label asp-for="@Model._Question.Title"></label></b>
                        <input   asp-for="@Model._Question.Title" type="text" class="form-control" placeholder="Enter title">

                    </div>
                    <div class="form-group">
                       <b><label asp-for="@Model._Question.Content"></label></b>
                        <textarea asp-for="@Model._Question.Content" type="text" rows="5" cols="20" class="form-control"  placeholder="Type the question here"></textarea>
                    </div>
                    <div class="form-group">
                        <b> <label asp-for="@Model._Question.Category"></label></b>
                       <select  asp-for="@Model._Question.Category" class="selectpicker" asp-items="@Html.GetEnumSelectList<Question.QuestionCategory>()"></select>
                    </div> 
                   
                    <button type="submit" class="btn btn-primary mb-2">Submit</button>
                </form>
                </div>
        </div>
    </div>
</div>